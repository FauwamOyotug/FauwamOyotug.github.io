  <script>
    // Generate bubbles
    const bubblesContainer = document.getElementById('bubbles');
    for (let i = 0; i < 20; i++) {
      const bubble = document.createElement('div');
      bubble.className = 'bubble';
      bubble.style.left = Math.random() * 100 + '%';
      bubble.style.width = bubble.style.height = (Math.random() * 20 + 10) + 'px';
      bubble.style.animationDuration = (Math.random() * 10 + 8) + 's';
      bubble.style.animationDelay = (Math.random() * 10) + 's';
      bubblesContainer.appendChild(bubble);
    }
    
    // Typing animation
    const phrases = [
      "Swimming through code at 25 mph ü¶àüí®",
      "I have 300 teeth... for biting bugs! üêõ",
      "My code has no bugs, only fish üêü",
      "Making waves in the tech ocean since 2019 üåä"
    ];
    let phraseIdx = 0, charIdx = 0, isDeleting = false;
    const typingEl = document.getElementById('typingText');
    
    function type() {
      const current = phrases[phraseIdx];
      typingEl.textContent = current.substring(0, isDeleting ? charIdx-- : charIdx++);
      
      if (!isDeleting && charIdx === current.length) {
        setTimeout(() => isDeleting = true, 2000);
      } else if (isDeleting && charIdx === 0) {
        isDeleting = false;
        phraseIdx = (phraseIdx + 1) % phrases.length;
      }
      setTimeout(type, isDeleting ? 40 : 80);
    }
    type();
    
    // Depth meter scroll tracking
    const depthFill = document.getElementById('depthFill');
    const depthNum = document.getElementById('depthNum');
    
    window.addEventListener('scroll', () => {
      const scrollTop = window.scrollY;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      const scrollPercent = (scrollTop / docHeight) * 100;
      const depth = Math.round((scrollPercent / 100) * 4000);
      
      depthFill.style.height = scrollPercent + '%';
      depthNum.textContent = depth + 'm';
      
      // Change color based on depth zone
      if (depth < 200) {
        depthFill.style.background = 'linear-gradient(to top, #00cec9, #0984e3)';
      } else if (depth < 1000) {
        depthFill.style.background = 'linear-gradient(to top, #6c5ce7, #0984e3)';
      } else if (depth < 2500) {
        depthFill.style.background = 'linear-gradient(to top, #2d3436, #6c5ce7)';
      } else {
        depthFill.style.background = 'linear-gradient(to top, #000, #2d3436)';
      }
    });
    
    // Shark bite counter
    let bites = 0;
    function sharkBite() {
      bites++;
      document.getElementById('biteCount').textContent = bites;
      const avatar = document.getElementById('sharkAvatar');
      avatar.classList.add('bite');
      
      // Random shark expressions
      const expressions = ['ü¶à', 'üò¨', 'ü§§', 'üò§', 'ü´®'];
      avatar.textContent = expressions[Math.floor(Math.random() * expressions.length)];
      
      // Spawn bite bubbles
      for (let i = 0; i < 5; i++) {
        const b = document.createElement('div');
        b.className = 'bubble';
        b.style.left = (40 + Math.random() * 20) + '%';
        b.style.bottom = '40%';
        b.style.width = b.style.height = (Math.random() * 15 + 8) + 'px';
        b.style.animationDuration = (Math.random() * 2 + 1) + 's';
        document.getElementById('bubbles').appendChild(b);
        setTimeout(() => b.remove(), 3000);
      }
      
      setTimeout(() => {
        avatar.classList.remove('bite');
        avatar.textContent = 'ü¶à';
      }, 500);
    }
    
    // Mobile menu toggle
    function toggleMenu() {
      document.getElementById('navLinks').classList.toggle('active');
    }
    
    // Close menu on link click
    document.querySelectorAll('.nav-links a').forEach(link => {
      link.addEventListener('click', () => {
        document.getElementById('navLinks').classList.remove('active');
      });
    });
    
    // Treasure chest toggle
    function toggleTreasure() {
      const popup = document.getElementById('treasurePopup');
      popup.classList.toggle('show');
    }
    
    // Click anywhere else to close treasure
    document.addEventListener('click', (e) => {
      if (!e.target.closest('.treasure') && !e.target.closest('.treasure-popup')) {
        document.getElementById('treasurePopup').classList.remove('show');
      }
    });
  </script>
</body>
</html>
